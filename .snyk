# Snyk (https://snyk.io) policy file, patches or ignores known vulnerabilities.
version: v1.25.0

# Language settings
language-settings:
  python:
    # Use requirements.txt for Python dependency scanning
    targetFile: requirements.txt

# Ignore specific vulnerabilities (with justification)
ignore:
  # Example: Ignore a specific vulnerability if it's a false positive or not exploitable in your context
  # 'SNYK-PYTHON-PACKAGE-ID':
  #   - '*':
  #       reason: 'Not exploitable in our use case - justification here'
  #       expires: '2025-12-31T00:00:00.000Z'

# Patch configurations
patch: {}

# Exclude paths from scanning
exclude:
  # Test files
  - tests/**
  - test_*.py

  # Virtual environments
  - venv/**
  - .venv/**
  - env/**

  # Build artifacts
  - dist/**
  - build/**
  - "*.egg-info/**"

  # Cache
  - __pycache__/**
  - .cache/**
  - *.pyc

  # Frontend dependencies (scanned separately)
  - frontend/node_modules/**
  - frontend/dist/**
  - frontend/build/**

# Severity threshold for breaking builds
# Options: low, medium, high, critical
failThreshold: high

# Organization settings (to be configured after Snyk account setup)
# organization: your-org-name
